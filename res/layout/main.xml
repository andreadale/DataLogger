<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="30px">
<TextView
	android:layout_width="wrap_content"
	android:text="STATUS: " 
	android:layout_gravity="center" android:layout_height="wrap_content" android:textSize="24px"/>
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/status" 
    android:id="@+id/statusView" android:layout_gravity="center" android:textSize="24px"/>
    </LinearLayout>
<LinearLayout 
	android:layout_width="match_parent" 
	android:id="@+id/linearLayout1" 
	android:layout_height="wrap_content"
	android:padding="10px" android:minHeight="30px" android:layout_centerVertical="true"></LinearLayout>
	<RelativeLayout 
	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
		<Button 
			android:text="START" 
			android:id="@+id/button" 
			android:onClick="@string/buttonHandler" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
	</RelativeLayout>

</RelativeLayout>